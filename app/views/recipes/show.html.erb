         <% end  %>
          -->
       </div>
      <div>
       </div>
    </div>

      <div class="cards_show2">
        <div class="recipe border-top border-end border-dark">
        <% if @recipe.description.present? %>
        <h2 class="fw-bold"2> Recipe <span> <%= @recipe.duration %>'</span></h2>
       <%= @recipe.description %>
        <% end %>
        </div>

        <div class="ingredients border-top border-dark">
        <h2 class="fw-bold"> Ingredients </h2>
          <% if @meal_ingredients.any? %>
          <ul>
            <% @meal_ingredients.each do |meal_ingredient| %>
              <li>
              <%= meal_ingredient.ingredient.ingredient_name %>
               <p> <%= meal_ingredient.portion %> Union </p>
              </li>
              <% end %>
            </ul>
          <% end %>
      </div>
      <div class="cards_show2">
      </div>

    </div>
