      <%#  <%#% if @recipe.present? %>
      <%# <% else %>
      <%#  <% end %>
      </div>
      <% end %>

       <!--Date pickr -->

      <h1> Selection of Cook and of Cooking Date </h1>
         <% if @menus.any? %>
          <% @menus.each do |menu| %>
            <div class="cook-name">
              <%= menu.cook_name %> <!-- Ensure Menu model has cook_name attribute -->
            </div>
         <% end %>
        <% else %>
          <p>No cook names found for this recipe</p>
        <% end %>
