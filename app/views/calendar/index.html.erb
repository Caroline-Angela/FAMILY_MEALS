<div class="container">
  <h1>Welcome <strong> <%= @usercalendar.user.first_name.capitalize %> <%= @usercalendar.user.last_name.capitalize %></strong> to your Calendar</h1>

    <%= link_to new_recipe_path do%>
    <div class="card-plus">
      <%= image_tag "plus_v1.jpeg"%>
    </div>
    <% end %>

    <%= render 'card_titles' %>

    <% @datecount = Date.today %>
    <% @menus.sort_by(&:date).each do |menu| %>
      <% while @datecount < menu.date %>
        <%= render 'card_empty', date: @datecount %>
        <% @datecount += 1 %>
      <% end %>
      <%= render 'card_full', menu: menu %>
      <% @datecount += 1 %>
    <% end %>

    <% while @datecount <= @menus.maximum(:date) %>
      <%= render 'card_empty', date: @datecount %>
      <% @datecount += 1 %>
    <% end %>

    <%= render 'card_empty', date: @datecount%>

</div>
